<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profileLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    tools:context=".ProfileActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Header -->
            <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Crear Perfil de Usuario"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/primary_purple"
                android:gravity="center"
                android:layout_marginBottom="24dp" />

            <!-- Formulario de perfil -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardProfileForm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/surface_light">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/textViewPersonalInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" Informaci贸n Personal"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary_light"
                        android:layout_marginBottom="16dp" />

                    <!-- Campo Nombre -->
                    <TextView
                        android:id="@+id/textViewNameLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" Nombre completo"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary_light"
                        android:layout_marginBottom="8dp" />

                    <EditText
                        android:id="@+id/editTextName"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:hint="Ej: Juan P茅rez"
                        android:inputType="textPersonName"
                        android:background="@drawable/edit_text_background_light"
                        android:textColor="@color/text_primary_light"
                        android:textColorHint="@color/text_hint_light"
                        android:padding="16dp"
                        android:layout_marginBottom="16dp" />

                    <!-- Campo Edad -->
                    <TextView
                        android:id="@+id/textViewAgeLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" Edad"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary_light"
                        android:layout_marginBottom="8dp" />

                    <EditText
                        android:id="@+id/editTextAge"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:hint="Ej: 25"
                        android:inputType="number"
                        android:background="@drawable/edit_text_background_light"
                        android:textColor="@color/text_primary_light"
                        android:textColorHint="@color/text_hint_light"
                        android:padding="16dp"
                        android:layout_marginBottom="16dp" />

                    <!-- Campo Email -->
                    <TextView
                        android:id="@+id/textViewEmailLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" Correo electr贸nico"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary_light"
                        android:layout_marginBottom="8dp" />

                    <EditText
                        android:id="@+id/editTextEmail"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:hint="Ej: juan@email.com"
                        android:inputType="textEmailAddress"
                        android:background="@drawable/edit_text_background_light"
                        android:textColor="@color/text_primary_light"
                        android:textColorHint="@color/text_hint_light"
                        android:padding="16dp"
                        android:layout_marginBottom="20dp" />

                    <!-- Botones -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/buttonSaveProfile"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text=" Guardar Perfil"
                            android:backgroundTint="@color/primary_green"
                            android:layout_marginEnd="8dp" />

                        <Button
                            android:id="@+id/buttonLoadProfile"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text=" Cargar Perfil"
                            android:backgroundTint="@color/primary_blue"
                            android:layout_marginStart="8dp" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Resultado -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardProfileResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/surface_light">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/textViewSavedInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" Informaci贸n Guardada"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary_light"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:id="@+id/textViewProfileResult"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="No hay informaci贸n guardada"
                        android:textSize="16sp"
                        android:textColor="@color/text_primary_light"
                        android:minHeight="100dp"
                        android:background="@drawable/result_background_light"
                        android:padding="16dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
